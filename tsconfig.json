{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "lib", "test", "dist"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

